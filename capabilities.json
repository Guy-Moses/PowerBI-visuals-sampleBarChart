{
    "dataRoles": [{
            "displayName": "Category Data",
            "name": "category",
            "kind": "Grouping"
        },
        {
            "displayName": "Measure Data",
            "name": "measure",
            "kind": "Measure"
        },
        {
            "displayName": "Tooltips",
            "name": "Tooltips",
            "kind": "Measure"
        }
    ],
    "dataViewMappings": [{
        "conditions": [{
            "category": {
                "max": 1
            },
            "measure": {
                "max": 1
            }
        }],
        "categorical": {
            "categories": {
                "for": {
                    "in": "category"
                }
            },
            "values": {
                "select": [{
                    "bind": {
                        "to": "measure"
                    }
                }]
            }
        }
    }],
    "objects": {
        "xAxisReferenceLine": {
            "displayName": "X-Axis Constant Line",
            "description": "Display a reference line",
            "properties": {
                "show": {
                    "displayName": "Enable X Axis Constant Line",
                    "type": {
                        "bool": true
                    }
                },
                "displayName": {
                    "displayName": "Name",
                    "description": "Set reference line name",
                    "type": { "text": true }
                },
                "value": {
                    "displayName": "Value",
                    "description": "Set reference line numeric value",
                    "type": { "numeric": true }
                },
                "lineColor": {
                    "displayName": "Color",
                    "description": "Set reference line color",
                    "type": { 
                        "fill": { 
                            "solid": { 
                                "color": true } 
                                } 
                            }
                        },
                "transparency": {
                    "displayName": "Transparency",
                    "description": "Set transparency for reference line color",
                    "type": { "numeric": true }
                },
                "style": {
                    "displayName": "Line style",
                    "type": { "enumeration":[
                        {"value": "dashed", "displayName":"dashed"},
                        {"value": "solid", "displayName":"solid"}
                        ]
                    }
                },
                "position": {
                    "displayName":"In Front",
                    "type": {"text": true}
                },
                "dataLabelShow": {
                    "displayName": "Data label",
                    "description": "Set the reference line data label color",
                    "type": { "bool": true }
                },
                "dataLabelColor": {
                    "displayName": "Color",
                    "description": "Set the reference line data label color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "dataLabelText": {
                    "displayName": "Visual_Reference_Line_Data_Label_Text",
                    "description":"Visual_Reference_Line_Data_Label_Text_Description",
                    "type": { "text": true}
                },
                "dataLabelDecimalPoints": {
                    "displayName": "Visual_Reference_Line_Data_Decimal_Points",
                    "placeHolderText": "Visual_Auto",
                    "type": { "numeric": true }
                },
                "dataLabelHorizontalPosition": {
                    "displayName": "Visual_Reference_Line_Data_Horizontal_Position",
                    "type": {"enumeration": [
                        {"value": "left", "displayName":"left"},
                        {"value": "right", "displayName":"right"}
                        ]
                    }
                },
                "dataLabelVerticalPosition": {
                    "displayName": "Visual_Reference_Line_Data_Vertical_Position",
                    "type": {"enumeration": [
                        {"value": "above", "displayName":"above"},
                        {"value": "under", "displayName":"under"}
                        ]
                    }
                },
                "dataLabelDisplayUnits": {
                    "displayName": "Visual_DisplayUnits",
                    "type": {
                        "formatting": { "labelDisplayUnits": true }
                    }
                }
            }
        },
        "enableAxis": {
            "displayName": "Enable Axis",
            "properties": {
                "show": {
                    "displayName": "Enable Axis",
                    "type": {
                        "bool": true
                    }
                },
                "fill": {
                    "displayName": "Color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                }
            }
        },
        "colorSelector": {
            "displayName": "Data Colors",
            "properties": {
                "fill": {
                    "displayName": "Color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                }
            }
        },
        "generalView": {
            "displayName": "General View",
            "properties": {
                "opacity": {
                    "displayName": "Bars Opacity",
                    "type": {
                        "integer": true
                    }
                },
                "showHelpLink": {
                    "displayName": "Show Help Button",
                    "type": {
                        "bool": true
                    }
                }
            }
        }
    },
    "tooltips": {
        "supportedTypes": {
            "default": true,
            "canvas": true
        },
        "roles": [
            "Tooltips"
        ]
    }
}